@inherits LayoutComponentBase
@using FacturacionVERIFACTU.Web.Services
@inject IJSRuntime JS
@inject IAuthService AuthService
@inject NavigationManager Nav

<AuthorizeView>
    <Authorized>
        <div class="notion-app">
            <aside class="notion-sidebar">
                <NavMenu />
            </aside>
            <main class="notion-main">
                <div class="notion-content">
                    @Body
                </div>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Iniciar monitor de inactividad (10 minutos = 600 segundos)
            var dotNetHelper = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("sessionMonitor.start", dotNetHelper, 600);
        }
    }

    [JSInvokable]
    public async Task LogoutByInactivity()
    {
        await AuthService.LogoutAsync();
        Nav.NavigateTo("/login", true);
    }
}