@code{
    private List<AlbaranResponseDto> albaranes = new();
    private HashSet<int> albaranesSeleccionados = new();
    private string? estadoSeleccionado = null;
    private bool cargando = true;

    [Inject] private IApiService ApiService { get; set; } = null;
    [Inject] private IJSRuntime JS { get; set; } = null;

    private List<AlbaranResponseDto> albaranesFiltrados =>
        estadoSeleccionado == null
            ? albaranes
            : albaranes.Where(a => a.Estado == estadoSeleccionado).ToList();

    private bool todosMarcados =>
        albaranesFiltrados.Any() && albaranesFiltrados.All(a => albaranesSeleccionados.Contains(a.Id));

    protected override async Task OnInitializedAsync()
    {
        await CargarAlbaranes();
    }

    private async Task CargarAlbaranes()
    {
        cargando = true;
        try
        {
            var response = await Http.GetFromJsonAsync<List<AlbaranResponseDto>>("api/albaranes");
            albaranes = response ?? new();
        }
        catch(Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar albaranes: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private void CambiarEstado(string? estado)
    {
        estadoSeleccionado = estado;
        albaranesSeleccionados.Clear();
    }

    private void ToggleSeleccion(int id)
    {
        if (albaranesSeleccionados.Contains(id))
            albaranesSeleccionados.Remove(id);
        else
            albaranesSeleccionados.Add(id);
    }

    private void SeleccionarTodos(ChangeEventArgs e)
    {
        var marcado = (bool)e.Value;
        if (marcado)
        {
            foreach (var albaran in albaranesFiltrados)
                albaranesSeleccionados.Add(albaran.Id);
        }
        else
        {
            albaranesSeleccionados.Clear();
        }
    }

    private void LimpiarSeleccion()
    {
        albaranesSeleccionados.Clear();
    }

    private void CrearNuevoAlbaran()
    {
        Navigation.NavigateTo("albaranes/nuevo");
    }

    private void EditarAlbaran(int id)
    {
        Navigation.NavigateTo($"albaranes/editar/{id}");
    }

    private async Task DescargarPDF(int id)
    {
        try
        {
            await JS.InvokeVoidAsync("open", $"api/albaranes/{id}/pdf", "_blank");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al descargar PDF: {ex.Message}");
        }
    }

    private async Task ConvertirAlbaranAFactura(int id)
    {
        var confirmado = await JS.InvokeAsync<bool>("confirm", "¿Convertir este albaran a factura?");
        if(confirmado)
        {
            Navigation.NavigateTo($"facturas/desde-albaran/{id}");
        }
    }

    private async Task ExportarSeleccionados()
    {
        if (!albaranesSeleccionados.Any()) return;

        try
        {
            foreach(var id in albaranesSeleccionados)
            {
                await JS.InvokeVoidAsync("open", $"api/albaranes/{id}/pdf", "_blank");
                await Task.Delay(200);  //Evita abrir todas las ventanas simultaneamente
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al exportar PDFs: {ex.Message}");
        }
    }

    private async Task EliminarAlbaran(int id)
    {
        var options = new ConfirmDialogOptions(
        "¿Eliminar albaran?",
        $"El albaran {id} se borrara permanentemente",
        "Eliminar",
        "Cancelar");

        ConfirmDialog.Show(options, async () =>
        {
            var result = await ApiService.DeleteAsyncDetailed($"api/albaranes/{id}");

            if (!result.Success)
            {
                var message = string.IsNullOrWhiteSpace(result.ErrorMessage)
                    ? "No se puede eliminar el albaran."
                    : result.ErrorMessage;

                throw new InvalidOperationException(message);
            }

            CargarAlbaranes();

            await InvokeAsync(StateHasChanged);
        });

       
    }

    private async Task ConvertirAFactura()
    {
        if (!albaranesSeleccionados.Any()) return;

        var confirmado = await JS.InvokeAsync<bool>("confirm",
            $"¿Convertir {albaranesSeleccionados.Count} albarán(es) a factura?");

        if (confirmado)
        {
            var ids = string.Join(",", albaranesSeleccionados);
            Navigation.NavigateTo($"/facturas/desde-albaranes?ids={ids}");
        }
    }

}