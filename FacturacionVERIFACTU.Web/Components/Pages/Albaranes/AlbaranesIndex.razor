@page "/albaranes"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject ConfirmDialogService ConfirmDialog
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Presupuestos - FacturacionVERIFACTU</PageTitle>

<div class="albaranes-container">
    <div class="header-section">
        <div class="title-area">
            <h1 class="page-title">📦 Albaranes</h1>
        </div>
        <div class="actions-area">
            <button class="btn-primary" @onclick="CrearNuevoAlbaran">
                <span class="btn-icon">+</span>
                Nuevo Albaran
            </button>
         </div>
    </div>
</div>

<!-- Tabs de Estado -->
<div class="tabs-container">
    <button class="tab @(estadoSeleccionado == null ? "active" : "")"
        @onclick="() => CambiarEstado(null)">
        Todos (@albaranes.Count)
    </button>
    <button class='tab @(estadoSeleccionado == "Pendiente" ? "active" : "")'
            @onclick='() => CambiarEstado("Pendiente")'>
        Pendiente (@albaranes.Count(a => a.Estado == "Pendiente"))
    </button>
    <button class='tab @(estadoSeleccionado == "Entregado" ? "active" : "")'
            @onclick='() => CambiarEstado("Entregado")'>
        Entregado (@albaranes.Count(a => a.Estado == "Entregado"))
    </button>

    <button class='tab @(estadoSeleccionado == "Facturado" ? "active" : "")'
            @onclick='() => CambiarEstado("Facturado")'>
        Facturado (@albaranes.Count(a => a.Estado == "Facturado"))
    </button>

    <button class='tab @(estadoSeleccionado == "Anulado" ? "active" : "")'
            @onclick='() => CambiarEstado("Anulado")'>
        Anulado (@albaranes.Count(a => a.Estado == "Anulado"))
    </button>
</div>

@if (cargando)
{
    <div class="loading-state">
        <div class="spinner"></div>
        <p>Cargando albaranes...</p>
    </div>
}
else if (!albaranesFiltrados.Any())
{
    <div class="empty-state">
        <div class="empty-icon">📦</div>
        <h3>No hay albaranes</h3>
        <p>@(estadoSeleccionado == null ? "Crea tu primer albarán" : $"No hay albaranes en estado {estadoSeleccionado}")</p>
        @if (estadoSeleccionado == null)
        {
            <button class="btn-primary" @onclick="CrearNuevoAlbaran">
                Crear Albarán
            </button>
        }
    </div>
}
else
{
    <!--Barra de acciones masivas-->
    @if (albaranesSeleccionados.Any())
    {
        <div class="bulk-actions">
            <div class="selection-info">
                <span class="selection-count">@albaranesSeleccionados.Count seleccionado(s)</span>
                <button class="btn-link" @onclick="LimpiarSeleccion">Limpiar seleccion</button>
            </div>
            <div class="action-buttons">
                @if (albaranesSeleccionados.All(id => albaranes.First(a => a.Id == id).Estado == "Entregado"))
                {
                    <button class="btn-secondary" @onclick="ConvertirAFactura">
                        <span class="btn-icon">📄</span>
                        Convertir a Factura
                    </button>
                }
                <button class="btn-secondary" @onclick="ExportarSeleccionados">
                    <span class="btn-icon">📥</span>
                    Exportar PDF
                </button>
            </div>
        </div>
    }

    <!-- Tabla albaranes-->
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th class="col-checkbox">
                        <input type="checkbox"
                                @onchange="SeleccionarTodos"
                                checked="@todosMarcados"/>
                    </th>
                    <th class="col-number">Numero</th>
                    <th class="col-client">Cliente</th>
                    <th class="col-date">F. Emision</th>
                    <th class="col-date">F. Entrega</th>
                    <th class="col-amount">Total</th>
                    <th class="col-status">Estado</th>
                    <th class="col-actions">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var albaran in albaranesFiltrados)
                {
                    <tr class='@(albaranesSeleccionados.Contains(albaran.Id) ? "selected" : "")'>
                        <td class="col-checkbox">
                            <input type="checkbox"
                                   checked="@albaranesSeleccionados.Contains(albaran.Id)"
                                   @onchange="() => ToggleSeleccion(albaran.Id)" />
                        </td>
                        <td class="col-number">
                            <span class="numero-badge">@albaran.SerieId-@albaran.Numero</span>
                        </td>
                        <td class="col-client">
                            <div class="client-info">
                                <span class="client-name">@albaran.ClienteNombre</span>
                            </div>
                        </td>
                        <td class="col-date">
                            @albaran.FechaEmision.ToString("dd/MM/yyyy")
                        </td>
                        <td class="col-date">
                            @(albaran.FechaEntrega?.ToString("dd/MM/yyyy") ?? "-")
                        </td>
                        <td class="col-amount">
                            <span class="amount">@albaran.Total.ToString("C2")</span>
                        </td>
                        <td class="col-status">
                            <span class='status-badge status-@albaran.Estado.ToLower()'>
                                @albaran.Estado
                            </span>
                        </td>
                        <td class="col-actions">
                            <div class="action-buttons-cell">
                                <button class="btn-icon-action" title="Ver/Editar" @onclick="() => EditarAlbaran(albaran.Id)"><span>👁️</span></button>
                                <button class="btn-icon-action" title="Descargar PDF" @onclick="() => DescargarPDF(albaran.Id)"><span>📥</span></button>
                                @if (albaran.Estado == "Entregado" && !albaran.Facturado)
                                {
                                    <button class="btn-icon-action" title="Convertir a Factura" @onclick="() => ConvertirAlbaranAFactura(albaran.Id)"><span>📄</span></button>
                                }
                                @if (albaran.Estado == "Pendiente")
                                {
                                    <button class="btn-icon-action danger" title="Eliminar" @onclick="() => EliminarAlbaran(albaran.Id)"><span>🗑️</span></button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>

    <!--Resumen de totales-->
    <div class="summary-section">
        <div class="summary-card">
            <span class="summary-label">Total visible:</span>
            <span class="summary-value">@albaranesFiltrados.Sum(a => a.Total)</span>
        </div>
        @if (albaranesSeleccionados.Any())
        {
            <div class="summary-card highlight">
                <span class="summary-label">Total seleccionado:</span>
                <span class="summary-value">
                    @albaranes.Where(a => albaranesSeleccionados.Contains(a.Id)).Sum(a => a.Total).ToString("C2")
                </span>
            </div>
        }
    </div>
}







