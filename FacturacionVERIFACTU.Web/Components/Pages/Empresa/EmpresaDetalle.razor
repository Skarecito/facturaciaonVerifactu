@page "/empresa"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Mi empresa - FacturaVERIFACTU</PageTitle>

<div class="notion-content">
    <div class="notion-header">
        <div class="header-main">
            <span class="header-icon">
                <i class="bi bi-building"></i>
            </span>
            <div>
                <h1>Mi empresa</h1>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" style="font-size: 13px; border-radius: 8px; border: none; background-color: #fff0f0; color: #e03e3e; margin-bottom: 20px; padding: 12px;">
            <i class="bi bi-exclamation-circle-fill"></i> @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" style="font-size: 13px; border-radius: 8px; border: none; background-color: #f0fff5; color: #0f5132; margin-bottom: 20px; padding: 12px;">
            <i class="bi bi-check-circle-fill"></i> @successMessage
        </div>
    }

    @if (isLoading)
    {
        <div class="notion-loading">
            <div class="spinner-modern"></div>
            <span>Cargando datos de la empresa...</span>
        </div>
    }
    else
    {
        <EditForm Model="model" OnValidSubmit="GuardarAsync" class="notion-form-container">
            <DataAnnotationsValidator />

            <div class="notion-form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="notion-input-group" style="grid-column: span 2;">
                    <label class="notion-label">Razón social</label>
                    <InputText @bind-Value="model.RazonSocial" class="notion-input-modern" />
                    <ValidationMessage For="() => model.RazonSocial" class="notion-error" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">NIF</label>
                    <InputText @bind-Value="model.NIF" class="notion-input-modern" />
                    <ValidationMessage For="() => model.NIF" class="notion-error" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Email</label>
                    <InputText @bind-Value="model.Email" class="notion-input-modern" type="email" />
                    <ValidationMessage For="() => model.Email" class="notion-error" />
                </div>

                <div class="notion-input-group" style="grid-column: span 2;">
                    <label class="notion-label">Dirección</label>
                    <InputText @bind-Value="model.Direccion" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Código postal</label>
                    <InputText @bind-Value="model.CodigoPostal" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Población</label>
                    <InputText @bind-Value="model.Poblacion" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Provincia</label>
                    <InputText @bind-Value="model.Provincia" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Teléfono</label>
                    <InputText @bind-Value="model.Telefono" class="notion-input-modern" />
                </div>
            </div>

            <div class="notion-page-header" style="margin-top: 30px;">
                <div class="header-main">
                    <span class="header-icon">📄</span>
                    <div>
                        <h2>Registro mercantil</h2>
                        <p>Datos opcionales para facturación y documentos legales.</p>
                    </div>
                </div>
            </div>

            <div class="notion-form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="notion-input-group" style="grid-column: span 2;">
                    <label class="notion-label">Registro mercantil</label>
                    <InputText @bind-Value="model.RegistroMercantil" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Tomo</label>
                    <InputText @bind-Value="model.Tomo" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Libro</label>
                    <InputText @bind-Value="model.Libro" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Folio</label>
                    <InputText @bind-Value="model.Folio" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Sección</label>
                    <InputText @bind-Value="model.Seccion" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Hoja</label>
                    <InputText @bind-Value="model.Hoja" class="notion-input-modern" />
                </div>

                <div class="notion-input-group">
                    <label class="notion-label">Inscripción</label>
                    <InputText @bind-Value="model.Inscripcion" class="notion-input-modern" />
                </div>
            </div>

            <div class="notion-page-header" style="margin-top: 30px;">
                <div class="header-main">
                    <span class="header-icon">🖼️</span>
                    <div>
                        <h2>Logo corporativo</h2>
                        <p>Sube una imagen PNG o JPG (máximo 2MB).</p>
                    </div>
                </div>
            </div>

            <div class="notion-form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="notion-input-group" style="grid-column: span 2;">
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <InputFile OnChange="SeleccionarLogo" accept=".png,.jpg,.jpeg" />
                        @if (tenantTieneLogo)
                        {
                            <span class="notion-badge active">Logo cargado</span>
                        }
                        else
                        {
                            <span class="notion-badge inactive">Sin logo</span>
                        }
                    </div>
                </div>

                <div class="notion-input-group" style="grid-column: span 2; display: flex; gap: 10px;">
                    <button type="button" class="btn-modern-secondary" disabled="@(!puedeSubirLogo || isUploadingLogo)" @onclick="SubirLogoAsync">
                        @if (isUploadingLogo)
                        {
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                        }
                        else
                        {
                            <span>Subir logo</span>
                        }
                    </button>
                    <button type="button" class="btn-modern-secondary" disabled="@(!tenantTieneLogo || isUploadingLogo)" @onclick="EliminarLogoAsync">
                        Eliminar logo
                    </button>
                </div>
            </div>

            <div class="notion-form-actions" style="display: flex; gap: 12px; margin-top: 30px; border-top: 1px solid #edeceb; padding-top: 25px;">
                <button type="submit" class="btn-modern" style="min-width: 140px;" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    }
                    else
                    {
                        <span>Guardar cambios</span>
                    }
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    private TenantUpdateDto model = new();
    private bool isLoading = true;
    private bool isSaving;
    private bool isUploadingLogo;
    private bool tenantTieneLogo;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private IBrowserFile? logoSeleccionado;

    [Inject] private IApiService ApiService { get; set; } = null!;
    [Inject] private HttpClient HttpClient { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await CargarEmpresaAsync();
    }

    private async Task CargarEmpresaAsync()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var response = await ApiService.GetAsync<TenantResponseDto>("api/tenants/mi-empresa");
        if (response == null)
        {
            errorMessage = "No se pudieron cargar los datos de la empresa.";
            isLoading = false;
            return;
        }

        model = new TenantUpdateDto
        {
            RazonSocial = response.RazonSocial,
            NIF = response.NIF,
            Direccion = response.Direccion,
            CodigoPostal = response.CodigoPostal,
            Poblacion = response.Poblacion,
            Provincia = response.Provincia,
            Telefono = response.Telefono,
            Email = response.Email,
            RegistroMercantil = response.RegistroMercantil,
            Tomo = response.Tomo,
            Libro = response.Libro,
            Folio = response.Folio,
            Seccion = response.Seccion,
            Hoja = response.Hoja,
            Inscripcion = response.Inscripcion
        };

        tenantTieneLogo = response.TieneLogo;
        isLoading = false;
    }

    private async Task GuardarAsync()
    {
        isSaving = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var response = await ApiService.PutAsync<TenantUpdateDto, ApiMessageDto>("api/tenants/mi-empresa", model);
        if (response == null)
        {
            errorMessage = "No se pudieron guardar los cambios.";
            isSaving = false;
            return;
        }

        successMessage = response.Mensaje;
        isSaving = false;
    }

    private void SeleccionarLogo(InputFileChangeEventArgs args)
    {
        logoSeleccionado = args.File;
    }

    private bool puedeSubirLogo => logoSeleccionado != null;

    private async Task SubirLogoAsync()
    {
        if (logoSeleccionado == null)
        {
            return;
        }

        isUploadingLogo = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            using var content = new MultipartFormDataContent();
            await using var stream = logoSeleccionado.OpenReadStream(2 * 1024 * 1024);
            var fileContent = new StreamContent(stream);
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(logoSeleccionado.ContentType);
            content.Add(fileContent, "archivo", logoSeleccionado.Name);

            var response = await HttpClient.PostAsync("api/tenants/mi-empresa/logo", content);
            if (!response.IsSuccessStatusCode)
            {
                errorMessage = "No se pudo subir el logo.";
                isUploadingLogo = false;
                return;
            }

            tenantTieneLogo = true;
            logoSeleccionado = null;
            successMessage = "Logo actualizado correctamente.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al subir el logo: {ex.Message}";
        }
        finally
        {
            isUploadingLogo = false;
        }
    }

    private async Task EliminarLogoAsync()
    {
        isUploadingLogo = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var response = await HttpClient.DeleteAsync("api/tenants/mi_empresa/logo");
        if (!response.IsSuccessStatusCode)
        {
            errorMessage = "No se pudo eliminar el logo.";
            isUploadingLogo = false;
            return;
        }

        tenantTieneLogo = false;
        successMessage = "Logo eliminado correctamente.";
        isUploadingLogo = false;
    }

    private sealed class ApiMessageDto
    {
        public string Mensaje { get; set; } = "Datos actualizados correctamente";
    }
}

