    private void ActualizarClienteRecargo()
    {
        var cliente = clientes.FirstOrDefault(c => c.ClienteId == factura.ClienteId);
        aplicaRecargoEquivalencia = cliente?.RegimenRecargoEquivalencia ?? false;
    }

    private Task OnClienteChanged(ChangeEventArgs args)
    {
        if (int.TryParse(args.Value?.ToString(), out var clienteId))
        {
            factura.ClienteId = clienteId;
            ActualizarClienteRecargo();

            var cliente = clientes.FirstOrDefault(c => c.ClienteId == clienteId);
            if (cliente != null)
            {
                if (!string.IsNullOrWhiteSpace(cliente.NIF) && cliente.TipoCliente != "B2C")
                {
                    factura.TipoFacturaVERIFACTU = "F1";
                }
                else
                {
                    factura.TipoFacturaVERIFACTU = "F2";
                }

                factura.PorcentajeRetencion = cliente.PorcentajeRetencionDefecto;
            }

            foreach (var linea in factura.Lineas)
            {
                ActualizarImpuestoLinea(linea);
            }

            StateHasChanged();
        }

        return Task.CompletedTask;
    }

    private decimal CalcularSubtotal(LineaFacturaViewModel linea) => linea.Cantidad * linea.PrecioUnitario;
    private decimal CalcularDescuento(LineaFacturaViewModel linea) => CalcularSubtotal(linea) * (linea.PorcentajeDescuento / 100m);
    private decimal CalcularBase(LineaFacturaViewModel linea) => CalcularSubtotal(linea) - CalcularDescuento(linea);

    private decimal CalcularIVA(LineaFacturaViewModel linea)
    {
        var tipo = tiposImpuesto.FirstOrDefault(t => t.Id == linea.TipoImpuestoId);
        if (tipo == null) return 0;
        return CalcularBase(linea) * (tipo.PorcentajeIva / 100m);
    }

    private decimal CalcularRecargo(LineaFacturaViewModel linea)
    {
        if (!aplicaRecargoEquivalencia) return 0;
        var tipo = tiposImpuesto.FirstOrDefault(t => t.Id == linea.TipoImpuestoId);
        if (tipo == null || !tipo.PorcentajeRecargo.HasValue) return 0;
        return CalcularBase(linea) * (tipo.PorcentajeRecargo.Value / 100m);
    }

    private decimal CalcularTotalLinea(LineaFacturaViewModel linea) =>
        CalcularBase(linea) + CalcularIVA(linea) + CalcularRecargo(linea);

    private void CambiarEstado(string nuevoEstado)
    {
        var options = new ConfirmDialogOptions(
            $"¿Cambiar estado a {nuevoEstado}?",
            $"La factura pasará de {estadoFactura} a {nuevoEstado}.",
            "Cambiar",
            "Cancelar"
        );

        ConfirmDialog.Show(options, async () =>
        {
            try
            {
                if (nuevoEstado == "Pagada")
                {
                    // Marcar como pagada
                    var dto = new MarcarComoPagadaDto
                    {
                        FechaPago = DateTime.Now,
                        Importe = TotalFactura,
                        FormaPago = "Transferencia"
                    };

                    await ApiService.PatchAsync<MarcarComoPagadaDto, FacturaResponseDto>($"api/facturas/{Id}/marcar-pagada", dto);

                }
                else if (nuevoEstado == "Anulada")
                {
                    // Anular
                    var dto = new AnularFacturaDto { Motivo = "Anulación manual" };
                    await ApiService.PostAsync<AnularFacturaDto, object>($"api/facturas/{Id}/anular", dto);
                }

                await CargarFacturaAsync();
                successMessage = $"Estado cambiado a {nuevoEstado} correctamente.";
                await InvokeAsync(StateHasChanged);

                _ = Task.Delay(3000).ContinueWith(_ =>
                {
                    successMessage = string.Empty;
                    InvokeAsync(StateHasChanged);
                });
            }
            catch (Exception ex)
            {
                errorMessage = $"Error al cambiar estado: {ex.Message}";
                await InvokeAsync(StateHasChanged);
            }
        });
    }

