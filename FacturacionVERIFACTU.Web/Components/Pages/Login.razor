@page "/login"
@page "/Account/Login"
@using FacturacionVERIFACTU.Web.Models.DTOs
@using FacturacionVERIFACTU.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            @* Puedes poner un icono aquí *@
            <i class="bi bi-shield-lock-fill" style="font-size: 2rem; color: #000;"></i>
            <h1>Iniciar sesión</h1>
            <p>Introduce tus credenciales para acceder a Verifactu</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="notion-input-group">
                <label class="notion-label">Email</label>
                <InputText @bind-Value="loginModel.Email" class="notion-input-modern" placeholder="nombre@empresa.com" autofocus />
            </div>

            <div class="notion-input-group">
                <label class="notion-label">Contraseña</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="notion-input-modern" placeholder="••••••••" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" style="font-size: 13px; border-radius: 8px; border: none; background-color: #fff0f0; color: #e03e3e;">
                    <i class="bi bi-exclamation-circle-fill"></i> @errorMessage
                </div>
            }

            <button type="submit" class="btn-modern" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ms-2">Iniciando sesión...</span>
                }
                else
                {
                    <span>Entrar</span>
                }
            </button>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequest loginModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // 1. Intentamos el login
            var result = await AuthService.LoginAsync(loginModel);

            if (result == null)
            {
                errorMessage = "Email o contraseña incorrectos";
                return;
            }

            // 2. IMPORTANTE: No hace falta el Notify si usas forceLoad: true.
            // La recarga forzada obligará al sistema a reconstruir el AuthState
            // leyendo el SessionStorage recién guardado.
            Nav.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = "Error de conexión: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }


    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Si ya está autenticado, no le dejes estar en la página de Login
        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            Nav.NavigateTo("/");
        }
    }
    
}