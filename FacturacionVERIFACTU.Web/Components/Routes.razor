@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavManager

<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        @* CAMBIO CRÍTICO: Usamos AuthorizeRouteView en vez de RouteView *@
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            <NotAuthorized>
                @* Si el usuario intenta entrar donde no debe... *@
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    @* ...lo mandamos al login *@
                    <RedirectToLogin />
                }
                else
                {
                    <p role="alert">No tienes permisos para acceder a esta página.</p>
                }
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>No encontrado</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <div class="text-center mt-5">
                <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: #ffc107;"></i>
                <h3 class="mt-3">Página no encontrada</h3>
                <p>Lo sentimos, no hay nada en esta dirección.</p>
                <a href="/" class="btn btn-dark mt-2">Volver al inicio</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>