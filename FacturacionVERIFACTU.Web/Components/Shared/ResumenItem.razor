@* Componente: fila de resumen en el paso de confirmación del registro *@
@* Ruta: FacturacionVERIFACTU.Web/Components/Shared/ResumenItem.razor *@

<div style="display:flex; align-items:center; justify-content:space-between; gap:8px;">
    <div style="display:flex; align-items:center; gap:10px; min-width:0;">
        <i class="bi @Icono" style="font-size:14px; color:#787774; flex-shrink:0;"></i>
        <div style="min-width:0;">
            <div style="font-size:11px; color:#9b9a97; text-transform:uppercase; letter-spacing:.04em;">@Etiqueta</div>
            <div style="font-size:14px; font-weight:500; color:#37352f; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">@Valor</div>
        </div>
    </div>
    <button type="button"
            @onclick="OnEditar"
            style="background:none; border:none; cursor:pointer; font-size:12px; color:#787774; padding:4px 8px; border-radius:4px; flex-shrink:0;"
            title="Editar">
        <i class="bi bi-pencil"></i>
    </button>
</div>

@code {
    [Parameter] public string Icono { get; set; } = string.Empty;
    [Parameter] public string Etiqueta { get; set; } = string.Empty;
    [Parameter] public string Valor { get; set; } = string.Empty;
    [Parameter] public EventCallback OnEditar { get; set; }
}

